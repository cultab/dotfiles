#!/bin/sh

choice=$(themr --list-themes |
    sed 1d |
    sed 's/\t//g' |
    dmenu -c -l 15 -p Theme:
)

if [ -z "$choice" ]; then
    notify-send 'Canceled!' -a themr --urgency low
    exit
fi

if ! themr "$choice" ; then
    notify-send 'Failed to set new theme!' "theme: $choice" -a themr --urgency critical
fi
