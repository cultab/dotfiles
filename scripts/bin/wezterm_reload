#!/bin/sh

FILE_PATH="$HOME/dotfiles/wezterm/.config/wezterm/wezterm.lua"

inotifywait -r -m "$FILE_PATH" | while read -r dir event file; do
	if [ "$event" = "MODIFY" ]; then
		cp -f "$FILE_PATH" /mnt/c/Users/evan/.config/wezterm/wezterm.lua
	fi
	if false; then
		echo "$dir" "$event" "$file"
	fi
done
