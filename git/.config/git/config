[init]
	defaultBranch = master

[diff]
    colorMoved = plain
	algorithm = histogram


[interactive]
    diffFilter = delta --color-only --features=interactive --diff-so-fancy

[delta]
    features = decorations
    side-by-side = false
    syntax-theme = base16
    features = interactive decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = yellow box
    commit-style = raw
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
    line-numbers = false
    line-numbers-left-format = "{nm:>4} ┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue
    whitespace-error-style = 22 reverse

[maintenance]
	auto = true
	strategy = incremental

[merge]
	tool = nvim
    conflictstyle = diff3

[mergetool]
    prompt = false



[alias]
	graph = log --all --graph --decorate --oneline
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ignore = "!gi() { local IFS=','; curl -sL https://www.toptal.com/developers/gitignore/api/\""$*"\"; }; if [ \""$*"\" = '' ]; then echo 'USAGE: git ignore <language>'; exit 1; fi; gi"
	permission-reset = "!git diff -p -R --no-ext-diff --no-color --diff-filter=M | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply"

[mergetool "nvim"]
	cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
