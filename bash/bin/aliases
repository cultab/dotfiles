# alias llsd="lsd $lsd_opts -l"
# alias lasd="lsd $lsd_opts -la"
# alias ltsd="lsd $lsd_opts --tree"

alias grep='grep --color=auto'
alias term_test='dd if=/dev/urandom | base64 | lolcat'

